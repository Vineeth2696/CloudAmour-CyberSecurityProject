<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Dbconnection</servlet-name>
        <servlet-class>com.cloudarmor.kk.action.Dbconnection</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Mail</servlet-name>
        <servlet-class>com.cloudarmor.kk.action.Mail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrippleDes</servlet-name>
        <servlet-class>com.cloudarmor.kk.action.TrippleDes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Upload</servlet-name>
        <servlet-class>com.cloudarmor.kk.action.Upload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Dbconnection</servlet-name>
        <url-pattern>/Dbconnection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Mail</servlet-name>
        <url-pattern>/Mail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrippleDes</servlet-name>
        <url-pattern>/TrippleDes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Upload</servlet-name>
        <url-pattern>/Upload</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
